<h1><%=@scene.title%></h1>
<p><%=@scene.story%></p>
<% if @scene.title == "Dia 4" %>
<%= link_to "back", scenes_path, class: 'btn btn-primary mb-5' %>
<%elsif @scene.title == "Dia 1" %>
<%= link_to "esquerda", scene_choice_path(@scene, Choice.all[1]), class: 'btn btn-dark mb-5' %>
<%= link_to "direita", scene_choice_path(@scene, Choice.first), class: 'btn btn-dark mb-5' %>
<%elsif @scene.title == "Dia 2" %>
<%= link_to "esquerda-cima", scene_choice_path(@scene, Choice.all[2]), class: 'btn btn-dark mb-5' %>
<%= link_to "direita-cima", scene_choice_path(@scene, Choice.all[3]), class: 'btn btn-dark mb-5' %>
<%elsif @scene.title == "Dia 3" %>
<%= link_to "esquerda-baixo", scene_choice_path(@scene, Choice.all[4]), class: 'btn btn-dark mb-5' %>
<%= link_to "direita-baixo", scene_choice_path(@scene, Choice.all[5]), class: 'btn btn-dark mb-5' %>
<% end %>
