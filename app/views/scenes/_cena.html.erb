<%= turbo_frame_tag "cena" do%>
  <%= render "shared/navbar" %>
  <div class="html2">
     <div class="container d-flex flex-column justify-content-end align-items-start" >
     <%#<div class="classroom" style="background-image: url(<%= image_path("scene_background.png") %>
<%# )"> %>
<h3 class="solway strokeme"><%=@scene.title%></h3>
    <div class="story-box w-100 border border-dark type" data-controller="select-choice" >
      <div data-controller="typed" data-typed-story-value="<%=@scene.story%>" data-action="keyup@window->select-choice#choose" ></div>
        <div class="mt-4" data-action="keyup@window->select-choice#selectChoice">
          <% @scene.choices.each do |choice| %>
            <%= link_to choice.action, scene_path(id: choice.next_scene_id, choice: choice.id),class: "text-decoration-none d-flex justify-content-center", data: {select_choice_target: "choice"}%>
          <% end %>
            <%= link_to "Jogue novamente", root_path, data: {select_choice_target: "choice"}, class: 'btn btn-dark'  if @scene.id == 4 || @scene.id == 5 %>
        </div>
    </div>
  </div>
  </div>
</div>
<% end %>
