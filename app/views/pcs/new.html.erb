  <div class="bg-new-pc">
    <div class="container">
      <h1 class="form-solway">Criação de personagem</h1>
      <div class="row justify-content-center">
        <div class="col-9 mt-5 ">
          <%= simple_form_for(@pc) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
              <%= f.input :pc_name, wrapper_html: { class: 'form-solway-input d-flex ' }, label: 'Nome:', error: false %>
            <%= f.input :gender,collection: Pc::GENDERS, wrapper_html: { class: 'form-solway-input d-flex ' }, label: 'Genero:', error: false %>
            <%= f.input :age, wrapper_html: { class: 'form-solway-input d-flex ' }, label: 'Idade:', error: false %>
            <div class="mt-3 d-flex justify-content-center">
            <%= f.submit 'Submit', class:"mb-4 btn-pc" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
