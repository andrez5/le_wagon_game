  <div class="bg-new-pc">
    <div class="container">
      <h1 class="form-solway">Registration</h1>
      <div class="row justify-content-end">
        <div class="col-9 mt-5 ">
          <%= simple_form_for(@pc) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <%= f.input :pc_name, wrapper_html: { class: 'form-solway-input d-flex' }, label: 'Character name:' %>
            <%= f.input :gender, wrapper_html: { class: 'form-solway-input d-flex' }, label: 'Gender:' %>
            <%= f.input :age, wrapper_html: { class: 'form-solway-input d-flex' }, label: 'Age:' %>
            <div class="mt-3 d-flex justify-content-center">
            <%= f.submit 'Submit', class:"mb-4 btn-pc" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
